rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isModerator() {
      // Check the user's role from their document in the 'users' collection
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'moderateur'];
    }

    match /users/{userId} {
      // Allow public read access for user profiles
      allow read: if true;

      // Allow creation if the user is creating their own document.
      // This is typically handled during sign-up.
      allow create: if isOwner(userId);
      
      // Allow updates if the user is the owner AND they are not trying to change their role.
      // This prevents a user from escalating their own privileges.
      allow update: if isOwner(userId) && request.resource.data.role == resource.data.role;
    }

    match /conversations/{conversationId} {
      function isParticipant() {
        return request.auth != null && request.auth.uid in resource.data.participantIds;
      }
      
      allow read: if isParticipant();
      allow create: if request.auth != null && request.auth.uid in request.resource.data.participantIds;
      allow update: if isParticipant() && request.resource.data.participantIds == resource.data.participantIds;
      
      match /messages/{messageId} {
        function canReadParentConversation() {
            return request.auth != null && get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds.hasAny([request.auth.uid]);
        }
        
        // Allow reads if the user is a participant.
        // Rules on specific fields (like plaintext) are checked by Firestore.
        // A user can read a document if they have access to any field.
        allow read: if canReadParentConversation();

        // Allow creating a message if the sender is the authenticated user 
        // and is a participant in the conversation.
        allow create: if canReadParentConversation() && isOwner(request.resource.data.senderId);

        // Deny updates and deletes for message immutability.
        allow update, delete: if false;
      }
    }
    
    match /moderation-actions/{actionId} {
        allow read: if isModerator();
        // Writes should ideally be handled by a backend/cloud function for security.
        allow write: if false;
    }

    // Default deny all other reads/writes
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
