rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isModerator() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'moderateur'];
    }

    // Allow public read access to user profiles for discovery purposes
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow reads and writes to conversations if the user is a participant
    match /conversations/{conversationId} {
      allow read, write: if request.auth != null && request.auth.uid in resource.data.participantIds;
      
      // Messages sub-collection rules
      match /messages/{messageId} {
        // Allow reads if the user is a participant in the parent conversation
        allow read: if request.auth != null && get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds.hasAny([request.auth.uid]);
        
        // Allow writes if the user is a participant in the parent conversation
        allow create: if request.auth != null && get(/databases/$(database)/documents/conversations/$(conversationId)).data.participantIds.hasAny([request.auth.uid]);

        // Deny updates and deletes for message immutability
        allow update, delete: if false;
      }
    }
    
    // Moderation rules
    match /moderation-actions/{actionId} {
        allow read: if request.auth != null && isModerator();
        // Writes should ideally be handled by a backend/cloud function for security
        allow write: if false;
    }


    // Default deny all other reads/writes
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
