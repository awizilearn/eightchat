{
  "entities": {
    "UserProfile": {
      "title": "UserProfile",
      "type": "object",
      "description": "Represents a user profile on the Golden Enclave platform.",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the UserProfile entity." },
        "displayName": { "type": "string", "description": "The user's display name." },
        "email": { "type": "string", "description": "The user's email address.", "format": "email" },
        "photoURL": { "type": "string", "description": "URL of the user's profile picture.", "format": "uri" },
        "role": { "type": "string", "enum": ["admin", "abonne", "createur", "moderateur", "agence"] },
        "signalPreKeyBundle": { "type": "object", "description": "Signal protocol pre-key bundle for E2EE." },
        "bio": { "type": "string", "description": "A short biography of the user." },
        "category": { "type": "string", "description": "Category of the creator." },
        "bannerUrl": { "type": "string", "description": "URL of the creator's banner image.", "format": "uri" },
        "tiers": { "type": "array", "items": { "$ref": "#/entities/SubscriptionTier" } },
        "content": { "type": "array", "items": { "$ref": "#/entities/Content" } },
        "subscriptions": { "type": "array", "items": { "type": "string" }, "description": "Array of creator IDs the user is subscribed to." },
        "savedContent": { "type": "array", "items": { "type": "string" }, "description": "Array of content IDs the user has saved." }
      },
      "required": ["id", "displayName", "email", "role", "signalPreKeyBundle"]
    },
    "SubscriptionTier": {
      "title": "SubscriptionTier",
      "type": "object",
      "properties": {
        "name": { "type": "string", "enum": ["Bronze", "Silver", "Gold"] },
        "price": { "type": "number" },
        "perks": { "type": "array", "items": { "type": "string" } },
        "cta": { "type": "string" }
      },
      "required": ["name", "price", "perks"]
    },
    "Content": {
      "title": "Content",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "title": { "type": "string" },
        "type": { "type": "string", "enum": ["image", "video", "article"] },
        "imageUrl": { "type": "string", "format": "uri" },
        "tier": { "type": "string", "enum": ["Bronze", "Silver", "Gold"] }
      },
      "required": ["id", "title", "type", "imageUrl", "tier"]
    },
    "Conversation": {
      "title": "Conversation",
      "type": "object",
      "properties": {
        "participantIds": { "type": "array", "items": { "type": "string" } },
        "lastMessage": { "type": "string" },
        "updatedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["participantIds", "updatedAt"]
    },
    "Message": {
      "title": "Message",
      "type": "object",
      "properties": {
        "senderId": { "type": "string" },
        "text": { "type": "string", "description": "Encrypted message content." },
        "plaintext": { "type": "string", "description": "Sender's copy of the message, unencrypted." },
        "createdAt": { "type": "string", "format": "date-time" },
        "isPaid": { "type": "boolean" },
        "contentTitle": { "type": "string" },
        "contentPrice": { "type": "number" },
        "contentImageUrl": { "type": "string", "format": "uri" },
        "contentType": { "type": "string", "enum": ["video", "image", "audio", "text"] }
      },
      "required": ["senderId", "text", "createdAt"]
    },
    "ModerationAction": {
      "title": "ModerationAction",
      "type": "object",
      "description": "Represents an action taken by a moderator.",
      "properties": {
        "actionType": { "type": "string", "enum": ["contentApproved", "userBanned", "warningIssued", "contentRejected", "userMuted"] },
        "targetType": { "type": "string", "enum": ["user", "post"] },
        "targetId": { "type": "string" },
        "moderatorId": { "type": "string" },
        "timestamp": { "type": "string", "format": "date-time" },
        "reason": { "type": "string" },
        "duration": { "type": "number", "description": "Duration in hours, if applicable." }
      },
      "required": ["actionType", "targetType", "targetId", "moderatorId", "timestamp"]
    },
    "Transaction": {
      "title": "Transaction",
      "type": "object",
      "description": "Represents a financial transaction on the platform.",
      "properties": {
        "subscriberId": { "type": "string" },
        "creatorId": { "type": "string" },
        "type": { "type": "string", "enum": ["sub", "payout", "tip"] },
        "description": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "method": { "type": "string" },
        "amount": { "type": "number" },
        "status": { "type": "string", "enum": ["completed", "pending"] }
      },
      "required": ["subscriberId", "creatorId", "type", "description", "date", "amount"]
    },
    "Task": {
      "title": "Task",
      "type": "object",
      "description": "Represents a task for internal teams.",
      "properties": {
        "title": { "type": "string" },
        "status": { "type": "string", "enum": ["todo", "in_progress", "done"] },
        "dueDate": { "type": ["string", "null"], "format": "date-time" },
        "category": { "type": "string" },
        "assigneeId": { "type": "string" },
        "creatorId": { "type": "string" },
        "hasAlert": { "type": "boolean" }
      },
      "required": ["title", "status", "assigneeId", "category"]
    },
    "OpsMessage": {
      "title": "OpsMessage",
      "type": "object",
      "description": "Represents a message in the internal Team Ops chat.",
      "properties": {
        "senderId": { "type": "string" },
        "text": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" },
        "isReadBy": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["senderId", "text", "createdAt"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous",
      "google.com",
      "apple.com"
    ]
  },
  "firestore": {
    "collections": [
      { "path": "/users", "schema": "#/entities/UserProfile", "description": "Stores user profiles." },
      { "path": "/conversations", "schema": "#/entities/Conversation", "description": "Stores conversation metadata.", "subcollections": [{ "path": "/messages", "schema": "#/entities/Message", "description": "Messages within a conversation." }] },
      { "path": "/moderation-actions", "schema": "#/entities/ModerationAction", "description": "Log of all moderator actions." },
      { "path": "/transactions", "schema": "#/entities/Transaction", "description": "Log of all financial transactions." },
      { "path": "/tasks", "schema": "#/entities/Task", "description": "Tasks for internal teams." },
      { "path": "/ops_messages", "schema": "#/entities/OpsMessage", "description": "Messages for internal Team Ops chat." }
    ]
  }
}
